/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
  box-sizing: border-box;
}

.logo-section {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 120rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 30rpx;
}

.app-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-options {
  flex: 1;
}

.wechat-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 32rpx;
  padding: 20rpx;
  margin: 20rpx 40rpx;
  cursor: pointer;
}

.wechat-login-btn[disabled] {
  opacity: 0.7;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin: 60rpx 40rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.divider-text {
  padding: 0 30rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.dev-login-btn {
  display: block;
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  font-size: 28rpx;
  padding: 20rpx;
  margin: 20rpx 40rpx;
  cursor: pointer;
}

.agreement {
  text-align: center;
  padding: 40rpx 0;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}