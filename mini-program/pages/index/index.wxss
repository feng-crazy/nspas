.container {
  background-color: #f0f2f5;
  height: 100%;
  padding: 40rpx;
}

.welcome-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.navigation-buttons {
  margin-bottom: 80rpx;
}

.navigator-button {
  background-color: #42b983;
  color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.navigator-button:active {
  background-color: #359c6d;
}

.info-section {
  text-align: center;
}

.info-text {
  display: block;
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}