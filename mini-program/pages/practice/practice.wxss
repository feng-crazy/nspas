.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.plan-generator {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: bold;
  color: #333;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.picker {
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.generate-btn {
  width: 100%;
  background-color: #42b983;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

.generate-btn[disabled] {
  background-color: #ccc;
}

.plan-display {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.plan-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #42b983;
  margin-bottom: 30rpx;
}

.task-day {
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.day-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #42b983;
  margin-bottom: 16rpx;
}

.task-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.task-description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.scientific-basis {
  background-color: #e8f4f1;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.basis-label {
  font-weight: bold;
  color: #42b983;
}

.basis-text {
  color: #666;
  font-size: 26rpx;
}

.plans-list {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #42b983;
  margin-bottom: 30rpx;
}

.plan-cards {
  max-height: 600rpx;
}

.plan-card {
  background-color: #f9f9f9;
  border: 2px solid #eee;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.plan-card.active {
  border-color: #42b983;
  background-color: #e8f4f1;
}

.plan-card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.plan-card-days {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.plan-card-date {
  display: block;
  font-size: 24rpx;
  color: #999;
}
