<view class="container">
  <scroll-view class="chat-container" scroll-y="true" scroll-top="{{scrollTop}}">
    <view class="messages">
      <block wx:for="{{messages}}" wx:key="id">
        <view class="message {{item.role}}">
          <view class="message-content">
            <text class="sender">{{item.role === 'user' ? '我' : '助手'}}</text>
            <text class="text">{{item.content}}</text>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>

  <view class="input-container">
    <textarea 
      class="input" 
      value="{{inputValue}}" 
      bindinput="onInput" 
      placeholder="请输入您的问题或想法..."
      fixed="true"
    />
    <button class="send-button" bindtap="sendMessage">发送</button>
  </view>
</view>